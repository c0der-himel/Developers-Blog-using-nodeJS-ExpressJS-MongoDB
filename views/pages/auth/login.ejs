<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../partials/head.ejs') %>
  </head>

  <body>
    <!-- Navbar -->
    <%- include('../../partials/navbar.ejs') %>

    <!-- Test -->
    <div class="container">
      <div class="row">
        <div class="col-sm-6 offset-sm-3">
          <div class="test my-5 shadow-lg rounded-3 py-4 px-5">
            <div class="title text-center mt-4 mb-5 px-5">
              <h1>Login to Account</h1>
              <hr />
            </div>
            <div class="content">
              <form action="/auth/login" method="POST">
                <div class="mb-3">
                  <label for="email" class="form-label ms-2">Enter Email</label>
                  <input
                    type="email"
                    id="email"
                    placeholder="Email . . ."
                    name="email"
                    value="<%= value.email ? value.email : '' %>"
                    class="form-control <%= error.email ? 'is-invalid' : '' %>"
                  />
                  <div class="invalid-feedback">
                    <%= error.email && error.email %>
                  </div>
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label ms-2"
                    >Enter Password</label
                  >
                  <input
                    type="password"
                    id="password"
                    placeholder="*******"
                    name="password"
                    class="form-control <%= error.password ? 'is-invalid' : '' %>"
                  />
                  <div class="invalid-feedback">
                    <%= error.password && error.password %>
                  </div>
                </div>
                <div class="my-4 d-grid">
                  <input
                    type="submit"
                    value="Login"
                    class="btn btn-dark py-2"
                  />
                </div>
              </form>
              <div class="alert alert-light text-center" role="alert">
                Don't have an account?
                <a href="/auth/signup" class="alert-link">Create One</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <%- include('../../partials/footer.ejs') %>
  </body>
</html>
